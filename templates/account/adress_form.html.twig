{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse
{% endblock %}

{% block body %}
	<h1>Ajouter une adresse</h1>

	<a href="{{ path('account_adress') }}">Retour au compte</a>
	<hr>
	{{ form_start(adressForm) }}
	<div class="row">
		<div class="col-md-12">{{ form_row(adressForm.name) }}</div>
		<div class="col-md-6">{{ form_row(adressForm.firstName) }}</div>
		<div class="col-md-6">{{ form_row(adressForm.lastName) }}</div>
		<div class="col-md-6">{{ form_row(adressForm.phone) }}</div>
		<div class="col-md-12">{{ form_row(adressForm.company) }}</div>
		<div class="col-md-12">{{ form_row(adressForm.adress) }}</div>
		<div class="col-md-6">{{ form_row(adressForm.postal) }}</div>
		<div class="col-md-6">{{ form_row(adressForm.city) }}</div>
		<div class="col-md-6">{{ form_row(adressForm.country) }}</div>

		<button type="submit" class="btn btn-lg btn-dark mt-3">Valider</button>
	</div>
	{{ form_end(adressForm) }}

{% endblock %}
