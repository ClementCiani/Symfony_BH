{% extends 'base.html.twig' %}

{% block title %}Mes adresses
{% endblock %}

{% block body %}
	<a href="{{ path('add_account_adress') }}" class="btn btn-sm btn-dark float-end">Ajouter une adresse</a>
	<h1>Mes adresses</h1>
	<p>
		C'est ici que vous allez pouvoir ajouter, modifier ou supprimer vos adresses
	</p>
	<a href="{{ path('account') }}">Retour au compte</a>
	<hr>
	{% if app.user.adresses | length == 0 %}
		<p>
			Vous n'avez pas encore ajout√© d'adresse dans votre compte. pour en ajouter une, veuillez
			<a href="">
				cliquer ici</a>
		</p>
	{% else %}
		<div class="row">
			{% for adress in app.user.adresses %}
				<div class="col-md-4">
					<div class="card">
						<div class="card-header">
							{{ adress.name }}
						</div>
						<div class="card-body">
							<p class="card-text">
								{{ adress.adress }}
								<br>
								{{ adress.postal }}
								<br>
								{{ adress.city }}
								<br>
								{{ adress.country }}
							</p>
						</div>
						<div class="card-footer">
							<a href="{{ path('edit_account_adress', {'id' : adress.id }) }}" class="btn btn-warning ms-2">Modifier</a>
							<a href="{{ path('delete_account_adress', {'id' : adress.id }) }}" class="btn btn-danger ms-3">Supprimer</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endif %}

{% endblock %}
