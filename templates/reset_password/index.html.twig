{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié
{% endblock %}

{% block content %}
	<div class="block-small">
		{% for message in app.flashes('notice') %}
			<div class="alert alert-danger">{{ message }}</div>
		{% endfor %}
		<form method="post">
			<h1 class="h3 mb-3 font-weight-normal">Réinitialiser le mot de passe</h1>
			<label for="inputEmail" class="mt-3">Email</label>
			<input
			type="email" name="email" id="inputEmail" class="form-control mt-1" autocomplete="email" required autofocus>


			{#Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. See https://symfony.com/doc/current/security/remember_me.html
																																																					<div class="checkbox mb-3">
																																																			 		<label>
																																																					<input type="checkbox" name="_remember_me"> Remember me
																																																			  		</label></div#}
			<div class="d-grid gap-2">
				<button class="btn btn-lg btn-dark mt-4" type="submit">Envoyer</button>
			</div>
			<hr>
			<a href="{{ path('app_login') }}">vous connecter à votre compte</a>
		</form>
	</div>

{% endblock %}
