{% extends 'base.html.twig' %}

{% block title %}Actualité
{% endblock %}

{% block content %}
	<div class="col-md-10">
		<h3>Actualité</h3>

		{% for news in news %}
			<div class="news-custom row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
				<div class="col-auto d-none d-lg-block">
					<img src="/uploads/news/{{ news.image}}" class="news-image-custom" width="200" height="250" preserveaspectratio="xMidYMid slice">
				</div>
				<div class="col p-4 d-flex flex-column position-static">
					<div class="mb-1 text-muted">
						<small>Créé le :
							{{ news.createdAt | date(('d/m/Y')) }}
							a
							{{ news.createdAt | date(('H:m')) }}</small>
					</div>
					<br><br>
					<a href="{{ path('news_show', { 'slug' : news.slug }) }}" class="stretched-link">
						<h3 class="mb-0">{{ news.title }}</h3>
					</a>
					<br>
					<p class="card-text mb-auto">{{ news.subtitle | raw }}.</p>

				</div>
			</div>
		{% else %}
			<tr>
				<td colspan="4">il n'y a aucune actu !</td>
			</tr>

		{% endfor %}


	</div>
{% endblock %}


